@model EmprestimosModelcs
@{
    ViewData["title"] = "Editar Empréstimo";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Editar Empréstimo</h1>
    </div>
<form method="post" asp-controller="Emprestimos" asp-action="Editar">

        <input type="hidden" asp-for="Id"/>
                     <div class="mb-3">
                        <label for="Recebedor" class="form-label text-light">Recebedor:</label>
                            <select class="form-control text-light" asp-for="RecebedorId" id="recebedor">
                                @foreach (var usuario in ViewBag.Usuarios)
                                    {
                                    <option value="@usuario.Id">@usuario.Name</option>
                                    }
                            </select>
                        <span class="text-danger" asp-validation-for="RecebedorId"></span>
                    </div>

                   <div class="mb-3">
                        <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
                            <select class="form-control text-light" asp-for="FornecedorId" id="fornecedor">
                                @foreach (var usuario in ViewBag.Usuarios)
                                    {
                                    <option value="@usuario.Id">@usuario.Name</option>
                                    }
                            </select>
                        <span class="text-danger" asp-validation-for="FornecedorId"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Livro" class="form-label text-light">Livro:</label>
                            <select class="form-control text-light" asp-for="LivroId" id="usuario">
                                @foreach (var livro in ViewBag.livros)
                                {
                                <option value="@livro.Id">@livro.Titulo</option>
                                }
                            </select>
                        <span class="text-danger" asp-validation-for="LivroId"></span>
                    </div>
        <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50">Salvar</button>
        <a class="btn btn-primary w-50" asp-controller="Emprestimos" asp-action="Index">Voltar</a>
    </div>
</form>
</div>
